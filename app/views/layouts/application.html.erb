<!DOCTYPE html>
<html>
  <head>
    <%= yield :title %>

    <%= yield :metatag_description if :metatag_description %>

    <%= yield :metatag_robots if :metatag_robots %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=Russo+One&display=swap" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container-fluid">
      <div class="row">
        <div class="col-12 px-0">

          <%= render 'layouts/modal' %>
          
          <div class="menu">
            <%= render 'layouts/menu-left' %>

            <div id="menu-center">
              <%= link_to image_tag('johansson.png', id: 'menu-image'), o_nas_path %>
            </div>

            <%= render 'layouts/menu-right' %>
          </div>

          <div class="menu-mobile">
            <%= render 'layouts/menu-mobile' %>
          </div>

          <div class="subtitle-panel">
            <%= render 'layouts/subtitle-panel' %>
          </div>

        </div>
      </div>
    </div>

    <div class="container pt-5">
      <div class="row">
        <div class="col-12 offset-0 col-md-8 offset-md-2"> 

          <%= render 'layouts/flash' %>

          <%= render 'layouts/cookies' %>
          
          <%= yield %>

        </div>
      </div>

      <div class="row row-footer mt-5">
        <div class="col-12 offset-0"> 
          <%= render 'layouts/footer' %>
        </div>  
      </div>
    </div>

  </body>
</html>
